{
  "name": "highlight-words-core",
  "description": "Utility functions shared by react-highlight-words and react-native-highlight-words",
  "version": "1.2.2",
  "author": "Brian Vaughn <brian.david.vaughn@gmail.com>",
  "license": "MIT",
  "source": "src/index.ts",
  "exports": "./dist/highlight-words-core.modern.js", 
  "main": "./dist/highlight-words-core.cjs",          
  "module": "./dist/highlight-words-core.module.js",  
  "unpkg": "./dist/highlight-words-core.umd.js",      
  "types": "dist/highlight-words-core.d.ts",
  "scripts": {
    "build": "microbundle --no-compress",
    "dev": "microbundle watch",
    "lint": "standard",
    "prebuild": "rimraf dist",
    "prepublish": "npm run build",
    "pretest": "npm run build",
    "test": "mocha \"src/**/*.test.js\""
  },
  "files": [
    "dist",
    "src/*.js"
  ],
  "keywords": [
    "highlighter",
    "highlight",
    "text",
    "words",
    "matches",
    "substring",
    "occurrences",
    "search"
  ],
  "repository": {
    "type": "git",
    "url": "github.com/bvaughn/highlight-words-core.git"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "build",
      "dist",
      "node_modules"
    ],
    "global": [
      "afterAll",
      "afterEach",
      "beforeAll",
      "beforeEach",
      "describe",
      "it"
    ]
  },
  "devDependencies": {
    "expect.js": "^0.3.1",
    "latinize": "^0.3.0",
    "microbundle": "^0.13.3",
    "mocha": "^3.0.2",
    "rimraf": "^2.4.3",
    "standard": "^7.0.1"
  }
}
